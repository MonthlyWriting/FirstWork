<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="daily_writing_add_radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="daily_writing_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">500dp</item>
        <item name="android:background">@drawable/daily_writing_item_frame</item>
    </style>
    
    <style name="transparent_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="fullscreen_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="black_edittext">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="animation_slide_up">
        <item name="android:windowEnterAnimation">@anim/from_bottom</item>
        <item name="android:windowExitAnimation">@anim/to_bottom</item>
    </style>

    <style name="animation_slide_right">
        <item name="android:windowEnterAnimation">@anim/from_right</item>
        <item name="android:windowExitAnimation">@anim/to_right</item>
    </style>
</resources>